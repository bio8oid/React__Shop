{
  "name": "shop-app",
  "version": "0.1.0",
  "author": "bio8oid",
  "private": true,
  "dependencies": {
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "start": "npm-run-all -p -l start:*",
    "start:server": "cd server && yarn start",
    "start:client": "cd client && yarn start",
    "install:client": "cd client && yarn install",
    "install:server": "cd server && yarn install",
    "postinstall": "run-p install:*"
  },
  "engines": {
    "yarn": "1.x",
    "node": "12.x"
  }
}
